import numpy as np
import matplotlib.pyplot as plt
import pandas as pd

# Create data
y = pd.Series([1, 2, 3, 4, 3, 5, 4])
x = pd.Series([1, 2, 3, 4, 5, 6, 7])

# Correlation
correlation = y.corr(x)
print("Correlation:", correlation)

# Scatter plot
plt.scatter(x, y)

# Fit and plot best-fit line
plt.plot(
    np.unique(x),
    np.poly1d(np.polyfit(x, y, 1))(np.unique(x)),
    color='red'
)

# Labels
plt.xlabel("X values")
plt.ylabel("Y values")

# Show plot
plt.show()
